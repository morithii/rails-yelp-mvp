<!-- app/views/restaurants/new.html.erb -->
<h1>New Restaurant</h1>
<%= form_with model: @restaurant, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>

  <%= form.label :address %>
  <%= form.text_field :address %>

  <%= form.label :phone_number %>
  <%= form.text_field :phone_number %>

  <%= form.label :category %>
  <%= form.select :category, ['chinese', 'italian', 'japanese', 'french', 'belgian'], include_blank: true %>

  <%= form.submit 'Create Restaurant' %>
<% end %>
